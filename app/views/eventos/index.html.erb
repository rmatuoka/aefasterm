<%content_for :title do%>
	Fasterm - Eventos
<%end%>

<%content_for :header do%>
	<!-- HEADER -->
	<div id="HeaderInternas">
		<%= image_tag("titulos/eventos.png", :alt => "Eventos")%>
	</div>
<%end%>

		<div id="Content" class="zeraMagem">
			<%= render :file => "layouts/_right.html.erb" %>
			
			<div id="HomeLeft">
				<!-- CONTEUDO INTERNA -->
				<div id="ContentInterno">
					<span class="DestaqueInterno"><%= image_tag("dest_interna.jpg")%></span>
					<!-- <span class="Titulo"><%= image_tag("bullet_mais.png")%> TÃ­tulo</span><br>-->
					
					<%@Eventos.each do |e|%>
					<div id="Evento">
						<%=link_to image_tag(@Servidor + e.image.url("home_evt")), evento_path(e)%>
						<span class="Data"><%=e.date_start.to_date.strftime("%d/%m/%Y")%></span>
						<span class="Titulo"><%=e.title%></span>
						<span class="Icones">
							<%=link_to image_tag("bullet_mais_eventos.gif"), evento_path(e)%>
							
							<%if !e.event_galleries.all.blank?%>
								<%=link_to image_tag("bullet_foto.gif"), home_path%>
							<%end%>
						</span>
					</div>
					<%end%>
				</div>
			</div>
		</div>
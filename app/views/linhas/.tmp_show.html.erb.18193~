<%content_for :head do%>
<%= stylesheet_link_tag "produtos"%>

<script>
	function overCat(x)
	{
		$j(x).removeClass("Item");
		$j(x).addClass("ItemOn");
	}
	
	function outCat(x)
	{
		$j(x).removeClass("ItemOn");
		$j(x).addClass("Item");
	}
</script>
<%end%>

<%content_for :header do%>
	<!-- HEADER -->
	<div id="HeaderInternas">
		<%= image_tag("titulos/produtos.png", :alt => "Produtos")%>
	</div>
<%end%>

		<div id="Content" class="zeraMagem">
			<%= render :file => "layouts/_right.html.erb" %>
			
			<div id="HomeLeft">
				<!-- CONTEUDO INTERNA -->
				<div id="ContentInterno">
					<div class="HeaderProdutos"><%= image_tag("produtos/header_home.png")%></div>
					<div id="BoxProdutos">
						<div id="Produtos">
							<!--
							<div class="Produto">
								<span class="Nome"><a href="">Nome do Produto</a></span>
								<span class="Icone"><%=link_to image_tag("bullet_mais_eventos.gif"), ""%></span>
							</div>
							-->
						</div>
						
						<div id="Categorias">
							<%if !@Categorias.blank?%>
								<%@Categorias.each do |c|%>
									<div id="<%=c.id.to_s%>" class="Item"><%=link_to c.title, linha_categoria_path(@Section, c), :onMouseover => "overCat('#"+ c.id.to_s+"')", :onMouseout => "outCat('#"+ c.id.to_s+"')"%></div>
								<%end%>
							<%end%>
						</div>
					</div>
				</div>
			</div>
		</div>
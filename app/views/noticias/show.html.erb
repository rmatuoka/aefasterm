<%content_for :title do%>
	Fasterm - Notícias - <%=@Noticia.title%>
<%end%>

<%content_for :head do%>
<%= stylesheet_link_tag "scroll/scrollable-buttons.css"%>
<%= stylesheet_link_tag "scroll/scrollable-horizontal.css"%>
<%= stylesheet_link_tag "scroll/scrollable-navigator.css"%>

<%end%>
<%content_for :header do%>
	<!-- HEADER -->
	<div id="HeaderInternas">
		<%= image_tag("titulos/noticias.png", :alt => "Notícias")%>
	</div>
<%end%>

		<div id="Content" class="zeraMagem">
			<%= render :file => "layouts/_right.html.erb" %>
			
			<div id="HomeLeft">
				<!-- CONTEUDO INTERNA -->
				<div id="ContentInterno">
					<span class="DestaqueInterno"><%= image_tag("dest_eventos_temp.jpg")%></span>
					<span class="Titulo"><%= image_tag("bullet_mais.png")%> <%=@Noticia.title%></span><br>
					
					<div id="Texto">
							<p>
								<%=@Noticia.body%>
							</p>
					</div>
					
					<%if !@Imagens.blank?%>
					
					
					
					<!-- GALERIA -->
					<div class="navi"></div>
					
					<!-- "previous page" action -->
					<a class="prev browse left"></a>
					
					<!-- root element for scrollable -->
					<div class="scrollable" id="browsable">   
					   
					   <!-- root element for the items -->
					   <div class="items">
					   
					      	<%counter = 0%>
							<div>
							<%@Imagens.each do |img|%>
							<%= lightbox_image_tag(@Servidor + img.image.url("thumb"), @Servidor + img.image.url("n_medio"), {:class=>"images"}, :title => img.title) %>

							<%counter = counter + 1
								
								if counter > 3
								%>
									</div><div>
								<%
									counter = 0
								end
							end %>
					      	</div>
					   </div>
					   
					</div>
					
					<!-- "next page" action -->
					<a class="next browse right"></a>
					
					<br clear="all" />
					
					<!-- javascript coding -->
					<script>
					// What is $(document).ready ? See: http://flowplayer.org/tools/documentation/basics.html#document_ready
					$j(document).ready(function() {
					
					// initialize scrollable together with the navigator plugin
					$j("#browsable").scrollable().navigator();	
					});
					</script>
					
					<div id="update_foto" class="FotoGrandeGaleria"></div>
					<%end%>
				</div>
			</div>
		</div>
<%content_for :head do%>
<%= stylesheet_link_tag "produtos"%>

<script>
	function overCat(x)
	{
		$j(x).removeClass("Item");
		$j(x).addClass("ItemOn");
	}
	
	function outCat(x)
	{
		$j(x).removeClass("ItemOn");
		$j(x).addClass("Item");
	}
</script>
<%end%>


<%content_for :title do%>
	Fasterm - Produtos - <%=@Produto.title%>
<%end%>

<%content_for :head do%>
<%= stylesheet_link_tag "produtos"%>

<script>
	function overCat(x)
	{
		$j(x).removeClass("Item");
		$j(x).addClass("ItemOn");
	}
	
	function outCat(x)
	{
		$j(x).removeClass("ItemOn");
		$j(x).addClass("Item");
	}
</script>
<%end%>

<%content_for :header do%>
	<!-- HEADER -->
	<div id="HeaderInternas">
		<%= image_tag("titulos/produtos.png", :alt => "Produtos")%>
	</div>
<%end%>

		<div id="Content" class="zeraMagem">
			<%= render :file => "layouts/_right.html.erb" %>
			
			<div id="HomeLeft">
				<!-- CONTEUDO INTERNA -->
				<div id="ContentInterno">
					<div class="HeaderProdutos"><%= image_tag(@HeaderInterno)%></div>
					<div id="BoxProdutos">
						<div id="Produtos" style="padding:20px 0px 0px 15px;">
							<span class="Titulo"><%=@Produto.title%></span>
							<br>
							<span class="Corpo"><%=@Produto.description%></span>	
							<br>
							<!-- pdf e video -->
							<%if !@Produto.pdf.blank?%>
								<%=link_to image_tag("botoes/pdf.gif"), @Servidor + @Produto.pdf.url%>
							<%end%>

							<%if @Produto.video.blank?%>
								<%=link_to image_tag("botoes/video.gif"), @Servidor + @Produto.video.url%>
							<%end%>
						</div>
						
						
						<div id="Categorias">
							<!-- IMAGENS -->
							<center>
								<%
								counter = 0
								@Imagens.each do |img|%>
									<%if counter == 1%>
										<br><br>
									<%end%>
									<%if counter == 0%>
										<%=lightbox_image_tag(@Servidor + img.image.url("p_medio"), @Servidor + img.image.url(), :title => img.legend)%>
									<%else%>
										<%=lightbox_image_tag(@Servidor + img.image.url("thumb"), @Servidor + img.image.url(), :title => img.legend)%>
									<%end%>
									
									<%counter = counter + 1%>
								<%end%>
								
							</center>
						</div>
					</div>
				</div>
			</div>
		</div>
